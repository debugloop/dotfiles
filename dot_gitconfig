[user]
    email = git@danieln.de
    name = Daniel Nägele

[alias]
    ci = commit -v
    co = checkout
    a = add
    ds = -c delta.side-by-side=true diff
    p = pull --ff-only --prune
    pub = !git push -u origin $(git symbolic-ref --short HEAD)
    s = status -s
    lv = log --first-parent -m --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --stat=99,99 --date=relative
    lg = log --graph --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%G?:\\ %cn]" --decorate --date=relative
    grep = grep -Ii
    rdy = rebase -i @{u}
    bs = remote update origin --prune
    b = branch --color="always" --sort=-authordate --format="%(color:blue)%(refname:short)\\ %(color:green)%(authordate:relative)\\ %(color:yellow)%(authorname)"
    sweep = !git branch --merged $([[ $1 != \"-f\" ]] \\\n&& git rev-parse master) | egrep -v \"(^\\*|^\\s*(master|develop)$)\" \\\n| xargs git branch -d

[color]
    ui = true

[push]
	default = current

[pull]
    rebase = true
	default = current

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[diff]
    colorMoved = default

[delta]
    navigate = true
    ; side-by-side = true
    dark = true
    syntax-theme = ansi
    features = unobtrusive-line-numbers

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#a5abb6"
    line-numbers-zero-style = "#a5abb6"
    line-numbers-plus-style = "#a5abb6"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = blue
    line-numbers-right-style = blue
[help]
	autocorrect = 1

[rebase]
	autoStash = true

[branch]
	autosetupmerge = always
[fetch]
	prune = true
